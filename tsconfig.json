{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": [
      "es5",
      "es2015",
      "es2017"
    ],
    "baseUrl": "./src",
    "paths": {
      "@src/*" : ["./*"],
      "@controller/*": ["./controller/*"],
      "@domain/*": ["./domain/*"],
      "@data": ["./data/*"]
    }
  }
}